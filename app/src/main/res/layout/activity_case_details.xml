<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context=".CaseDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Screen Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Case Details"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"/>

        <!-- Case ID -->
        <TextView
            android:id="@+id/requestIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case ID: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#34495E"
            android:layout_marginBottom="10dp"/>

        <!-- NEW: Countdown Timer TextView -->
        <TextView
            android:id="@+id/countdownTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time left: Calculating..."
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal"/>

        <!-- Item Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/itemTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Type: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/colorTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/brandTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brand: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/ownerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner Name: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/lossDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loss Description: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <!-- Trip Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/tripDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Date: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/tripTimeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Time: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/originTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/destinationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/lineNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Line Number: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <!-- Reporter Details Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporter Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/fullNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporter Full Name: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/idCardTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporter ID Card: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/phoneNumberTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporter Phone Number: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporter Email: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>
        <TextView android:id="@+id/cityTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reporter City: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="4dp"/>

        <!-- Status and System Comments Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case Status"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <TextView android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#007BFF"
            android:layout_marginBottom="4dp"/>

        <TextView android:id="@+id/systemCommentsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="System Comments: "
            android:textSize="16sp"
            android:textColor="#555555"
            android:layout_marginBottom="24dp"/>

        <!-- CardView for Edit Case Button (visible only for admin) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/editCaseButtonCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            android:visibility="gone"> <!-- Initially hidden -->

            <Button
                android:id="@+id/editCaseButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Case"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:minHeight="60dp"/>
        </androidx.cardview.widget.CardView>

        <!-- CardView for Read Details Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/readDetailsButtonCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <Button
                android:id="@+id/readDetailsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read Case Details"
                android:textColor="@android:color/white"
                android:padding="16dp"
                android:minHeight="60dp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
